%article#main
  %section.wrapper.style4.container
    .content
      %section
        .panel-group#accordion
          .panel.panel-default
            .panel-heading
              = simple_form_for(problem, html: {method: :post, class: 'form-inline' }) do |f|
                = f.input_field :name, label: false, class: "form-control inline-input"
                = f.submit "+", class: "btn-xs inline-plus special"

          - problems.persisted.each do |problem|
            .panel.panel-default
              .panel-heading
                %h4.panel-title
                  = problem.name
                  = link_to 'X', problem, class: "btn btn-xs pull-right", method: :delete, data: { confirm: 'Are you sure?' }
                  = link_to 'E', edit_problem_path(problem.id), class: "btn btn-xs pull-right"
                  = link_to "P", projects_path(project: {name: problem.name, user: problem.user}), method: :post, class: "btn btn-xs pull-right"
