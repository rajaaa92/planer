%article#main
  %section.wrapper.style3.container.special#sign_up{:class => "75%"}
    %header.major
      %h2= t('.change')
    .row
      = simple_form_for(resource, as: resource_name, url: password_path(resource_name), :html => { class: 'password_form', :method => :put }) do |f|
        .row
          .12u
            = f.input :reset_password_token, as: :hidden
            = f.input :password, label: "New password", required: true, autofocus: true
        .row
          .12u
            = f.input :password_confirmation, label: "Confirm your new password", required: true
        .row
          .12u
            %ul.buttons
              %li
                = f.submit "Change my password", class: "special"
